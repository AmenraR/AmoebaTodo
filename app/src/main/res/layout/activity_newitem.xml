<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TimePickerFragment">


    <TextView
        android:text="Title"
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <EditText
        android:inputType="text"
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/titleText"
        />

    <TextView
        android:text="Reminder"
        android:id="@+id/memoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:inputType="text"
        android:id="@+id/memo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/memoText"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/memoText"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Task"
        android:id="@+id/submit"
        android:onClick="sendFeedback"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@+id/titleText"
        android:layout_toStartOf="@+id/submit"
        android:layout_below="@+id/memo"
        android:layout_marginTop="63dp"
        android:layout_alignRight="@+id/memo"
        android:layout_alignEnd="@+id/memo">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/time_select"
            android:onClick="showTimePickerDialog"
            android:layout_marginTop="20dp"
            android:id="@+id/button"
            android:layout_gravity="left|top" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/date_select"
            android:onClick="showDatePickerDialog"
            android:layout_marginTop="20dp"
            android:id="@+id/button2"
            android:layout_gravity="right|top" />

        <TextView
            android:text="Time"
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="left|top" />

        <TextView
            android:text="Date"
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="right|top" />
    </FrameLayout>

</RelativeLayout>